<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Large red circle -->
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#e91e63" />

            <size
                android:width="40dp"
                android:height="40dp"/>
        </shape>
    </item>

    <!-- Small black circle -->
    <item
        android:right="-3dp"
        android:left="-3dp"
        android:top="-3dp"
        android:bottom="-3dp">
        <shape android:shape="oval">
            <stroke android:color="@android:color/transparent"
                android:width="20dp"/>
            <solid android:color="#e91e63"/>
            <size
                android:width="30dp"
                android:height="30dp"/>
        </shape>
    </item>

</layer-list>